<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :law_id %>
    <%= form.select :law_id, Law.all.collect {|l| [l.title, l.id]}, id: :comment_law_id %>
  </div>

  <div class="field">
    <%= form.label :draft_id %>
    <%= form.select :draft_id, Draft.all.collect {|l| [l.title, l.id]}, id: :draft_id %>
  </div>

  <div class="field">
    <%= form.label :document_id %>
    <%= form.select :document_id, Document.all.collect {|d| [d.source_url, d.id]}, id: :comment_document_id %>
  </div>

  <div class="field">
    <%= form.label :asked_at %>
    <%= form.datetime_select :asked_at, id: :comment_asked_at %>
  </div>

  <div class="field">
    <%= form.label :answered_at %>
    <%= form.datetime_select :answered_at, id: :comment_answered_at %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
