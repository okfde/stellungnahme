<%= form_with(model: document, local: true) do |form| %>
  <% if document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :source_url %>
    <%= form.text_field :source_url, id: :document_source_url %>
  </div>

  <div class="field">
    <%= form.label :contents %>
    <%= form.text_area :contents, id: :document_contents %>
  </div>

  <div class="field">
    <%= form.label :filetype %>
    <%= form.text_field :filetype, id: :document_filetype %>
  </div>

  <div class="field">
    <%= form.label :filesize %>
    <%= form.number_field :filesize, id: :document_filesize %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
